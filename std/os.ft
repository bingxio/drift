mod os

/*
 * desc: 提示
 * deep: 睡觉
 * step: 取模
 * op:   结束
 */
def (desc: str, deep + step + op: int) loop
    do
        def i: int = 0
    for ->
        if i == op
            out ->
        ef i % step == 0
            i += 1
            tin ->
        end
        
        putl(i, desc)

        i += 1
        sleep(deep)
    end
end